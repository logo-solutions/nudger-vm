# ClusterConfiguration
apiVersion: kubeadm.k8s.io/v1beta4
kind: ClusterConfiguration
kubernetesVersion: "{{ k8s_semver | default(k8s_version.split('-')[0]) }}"
controlPlaneEndpoint: "{{ apiserver_endpoint | default(ansible_default_ipv4.address ~ ':6443') }}"

networking:
  podSubnet: "{{ pod_subnet | default('10.244.0.0/16') }}"
  serviceSubnet: "{{ service_subnet | default('10.96.0.0/12') }}"

apiServer:
  certSANs:
{% for san in apiserver_sans %}
    - "{{ san }}"
{% endfor %}
  extraArgs:
    - name: etcd-servers
      value: "https://{{ ansible_default_ipv4.address }}:2379"
{% if etcd_encryption_enabled | default(false) %}
    - name: encryption-provider-config
      value: "/etc/kubernetes/encryption.yaml"
{% endif %}
  extraVolumes:
{% if etcd_encryption_enabled | default(false) %}
    - name: encryption
      hostPath: "/etc/kubernetes/encryption.yaml"
      mountPath: "/etc/kubernetes/encryption.yaml"
      readOnly: true
      pathType: File
{% endif %}

---

# InitConfiguration
apiVersion: kubeadm.k8s.io/v1beta4
kind: InitConfiguration

localAPIEndpoint:
  advertiseAddress: "{{ ansible_default_ipv4.address }}"
  bindPort: 6443

nodeRegistration:
  criSocket: unix:///var/run/containerd/containerd.sock
  kubeletExtraArgs:
    - name: cgroup-driver
      value: "systemd"

---

# KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
cgroupDriver: "systemd"
